// This file is included in the build if src/main.js imports it.
// Otherwise the default Material CSS file is bundled.
// Check "DEFAULT / CUSTOM STYLE" in src/main.js

// App Shared Variables
// --------------------------------------------------
// Shared Stylus variables go in the app.variables.styl file
@import 'app.variables'

// Quasar Material Design Stylus
// --------------------------------------------------
// Custom App variables must be declared before importing Quasar.
// Quasar will use its default values when a custom variable isn't provided.
@import '~quasar-framework/dist/quasar.mat.styl'

/*
 * GLOBAL
 */

// Layout
main
  .container
    margin 0 15px


header
  margin 0
  background-color $primary

// Texts
h4
  color $tertiary



/*
 * COMPONENTS
 */

.q-tabs-head
  padding 0!important
  .q-tab
    &.active
      background-color $primary-darken

// Layout
.layout-page-container
  background $background
.layout-header
  box-shadow none
  .q-toolbar
    background $light
    color $dark
    border-bottom 1px solid $grey-5
    > .q-btn
      margin-right 1.2rem
.layout-aside-left
  &.fixed
    &.on-layout
      box-shadow none
  .q-list
    .q-list-header
      line-height 25px
      background-color $primary
      display flex
      justify-content flex-start
      align-items center
      color $white
    .q-item
      .q-item-section
        color: $white
        .q-item-sublabel
          color: $grey-5
    .q-item.active,
    .q-item.router-link-active,
    .q-item:focus,
    .q-item:hover
      background-color $background
      border-left 6px solid $secondary
      transition all .2s ease-out
      .q-item-section
        color: $grey-10
        .q-item-sublabel
          color: $grey-8
    .q-collapsible
      .q-collapsible-sub-item
        padding 0 0 16px 6px
        .q-item.router-link-active,
        .q-item:focus,
        .q-item:hover
          border none


/*
 * SPECIFIC
 */

.bg-facebook
  background-color $facebook
.bg-twitter
  background-color $twitter
.bg-github
  background-color $github
.bg-google
  background-color $google
